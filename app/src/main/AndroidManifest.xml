<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaiserapps.benkaiser.strettoandroidsync" >

    <application
        android:name=".SyncApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SyncView"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlaylistSelectionView"
            android:label="@string/title_activity_playlist_selection"
            android:parentActivityName=".SyncView" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kaiserapps.benkaiser.strettoandroidsync.SyncView" />
        </activity>
        <activity
            android:name=".ProcessSyncView"
            android:label="@string/title_activity_process_sync_view"
            android:parentActivityName=".PlaylistSelectionView" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kaiserapps.benkaiser.strettoandroidsync.PlaylistSelectionView" />
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>
